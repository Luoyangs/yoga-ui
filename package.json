{
  "name": "yui",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/yui.js",
  "module": "dist/yui.es.js",
  "umd": "dist/yui.umd.js",
  "style": "dist/yui.css",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rm -rf dist & rollup -cw & yarn docs:dev",
    "start": "node bin/dev.js",
    "docs:dev": "vitepress dev docs",
    "serve": "ENV=dev node bin/deploy.js && vitepress serve docs",
    "lint": "yarn eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "vue": "^3.2.19"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@rollup/plugin-url": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "autoprefixer": "^10.3.1",
    "browser-sync": "^2.27.4",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.2",
    "eslint": "^7.32.0",
    "eslint-plugin-markdown": "^2.2.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "lodash": "^4.17.21",
    "postcss": "^8.3.5",
    "prettier": "2.4.1",
    "rollup": "^2.52.8",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "3",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "~1.32.6",
    "typescript": "^4.4.3",
    "vitepress": "^0.19.1",
    "vue": "^3.2.19",
    "vue-eslint-parser": "^7.11.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "async-validator": "^4.0.3",
    "codesandbox": "^2.2.3",
    "mitt": "^3.0.0",
    "vuelidate": "^0.7.6"
  },
  "lint-staged": {
    "*.{vue,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css,json,yaml,yml,md,html}": "prettier --write"
  },
  "repository": "https://github.com/Luoyangs/yoga-ui.git",
  "author": "Luoyangs"
}
