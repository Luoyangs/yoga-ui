{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "declaration": true,
    "declarationDir": "types",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@directives/*": ["src/directives/*"],
      "@directives": ["src/directives"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@base/*": ["src/base/*"],
      "@base": ["src/base"],
      "@theme/*": ["src/theme/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "doc", "types"]
}
