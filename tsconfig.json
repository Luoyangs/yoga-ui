{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "declaration": true,
    "declarationDir": "types",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@base/*": ["src/base/*"],
      "@theme/*": ["src/theme/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "doc", "types"]
}
